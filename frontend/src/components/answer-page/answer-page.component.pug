mixin item(props)
 .answer-advantages-item
    .answer-advantages-item__icon
        img(src=`assets/images/${props.img}`, alt="answer")
    .answer-advantages-item__text
        p.page-text #{props.text}

mixin items(arr)
    each obj in arr
        +item(obj)

